/*SELECT CASE 
WHEN A + B <= C OR A + C <= B OR B + C <= A THEN 'Not A Triangle' 
WHEN A = B AND B = C THEN 'Equilateral' 
WHEN A = B OR B = C OR A = C THEN 'Isosceles' 
ELSE 'Scalene' 
END 
FROM TRIANGLES*/


Select 
case when a+b<=c or b+c<=c or a+c<= b then 'Not A Triangle'
      when (a=b and b<>c) or (b=c and a<>c) or (c=a and a<>b) then 'Isosceles'
      when a=b and b=c then 'Equilateral'
      else 'Scalene'
end
from Triangles;
